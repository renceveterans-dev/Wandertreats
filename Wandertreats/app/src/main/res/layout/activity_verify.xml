<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/mainToolbar"
            layout="@layout/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/space_20">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/smsTitleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical"
                android:text="Verification Code"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_16"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/noteTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="35dp"
                android:gravity="center|center_vertical"
                android:text="We sent the code verification to your mobile number"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/mobilenumberTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center|center_vertical"
                android:text="09398296855"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_14" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/itemCard1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:contentPadding="@dimen/space_5">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/digit1"
                        android:layout_width="@dimen/space_30"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:fontFamily="@font/poppins_semibold"
                        android:imeOptions="actionNext"
                        android:maxLength="1"
                        android:padding="@dimen/space_10"
                        android:text=""
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_16" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/itemCard2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:contentPadding="@dimen/space_5">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/digit2"
                        android:layout_width="@dimen/space_30"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:fontFamily="@font/poppins_semibold"
                        android:imeOptions="actionNext"
                        android:maxLength="1"
                        android:padding="@dimen/space_10"
                        android:text=""
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_16" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/itemCard3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:contentPadding="@dimen/space_5">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/digit3"
                        android:layout_width="@dimen/space_30"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:fontFamily="@font/poppins_semibold"
                        android:imeOptions="actionNext"
                        android:maxLength="1"
                        android:padding="@dimen/space_10"
                        android:text=""
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_16" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/itemCard4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:contentPadding="@dimen/space_5">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/digit4"
                        android:layout_width="@dimen/space_30"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:fontFamily="@font/poppins_semibold"
                        android:imeOptions="actionNext"
                        android:maxLength="1"
                        android:padding="@dimen/space_10"
                        android:text=""
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_16" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/itemCard5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:contentPadding="@dimen/space_5">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/digit5"
                        android:layout_width="@dimen/space_30"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:fontFamily="@font/poppins_semibold"
                        android:imeOptions="actionNext"
                        android:maxLength="1"
                        android:padding="@dimen/space_10"
                        android:text=""
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_16" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/itemCard6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:contentPadding="@dimen/space_5">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/digit6"
                        android:layout_width="@dimen/space_30"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:fontFamily="@font/poppins_semibold"
                        android:imeOptions="actionNext"
                        android:maxLength="1"
                        android:padding="@dimen/space_10"
                        android:text=""
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_16" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/resendTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center|center_vertical"
                    android:text="Need new code?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_14" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/resendBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_10"
                    android:layout_marginTop="5dp"
                    android:gravity="center|center_vertical"
                    android:text="Resend now"
                    android:textColor="@color/appThemeColor_dark"
                    android:textSize="@dimen/txt_size_14" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submitBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:layout_gravity="bottom"
                android:layout_margin="25dp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/poppins_medium"
                android:foreground="?attr/selectableItemBackground"
                android:text="SUBMIT CODE"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_14" />


        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <include
        android:id="@+id/noConnection"
        layout="@layout/no_internet"
        android:layout_marginTop="@dimen/dimen_50"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <include
        android:id="@+id/loader"
        layout="@layout/loader"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

</RelativeLayout>